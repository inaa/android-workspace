<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_backgroud" >

        <TextView
            android:id="@+id/textView1"
            style="@style/textViewStyleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="STATUS" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutDataArea"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_start_or_pause_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttons_backgroud"
            android:text="@string/button_start_or_pause_exercise_start_title" />

        <Button
            android:id="@+id/button_stop_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttons_backgroud"
            android:text="@string/button_stop_exercise_title" />

    </LinearLayout>

</LinearLayout>
