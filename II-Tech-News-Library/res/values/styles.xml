<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Title" parent="@android:style/TextAppearance">
    	<item name="android:textColor">@color/black</item>
    	<item name="android:textSize">@dimen/title_size</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="PreviewTitle" parent="@android:style/TextAppearance">
    	<item name="android:textColor">@color/black</item>
    	<item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    
    <style name="NormalText" parent="@android:style/TextAppearance">
    	<item name="android:textColor">@color/black</item>
    	<item name="android:textSize">@dimen/small_text_size</item>
    	<item name="android:textStyle">normal</item>
    	<item name="android:clickable">true</item>
    </style>
    
    <style name="SmallText" parent="@android:style/TextAppearance">
    	<item name="android:textColor">@color/gray</item>
    	<item name="android:textSize">@dimen/small_text_size</item>
    	<item name="android:textStyle">italic</item>
    	<item name="android:paddingRight">5dp</item>
    </style>

    <style name="imageTitleStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/bela</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>